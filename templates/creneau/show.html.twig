{% extends 'base.html.twig' %}

{% block title %}Détails du Créneau{% endblock %}

{% block body %}
    <h1>Détails du créneau</h1>

    <table class="table">
        <tr>
            <th>Libellé</th>
            <td>{{ creneau.libelle }}</td>
        </tr>
        <tr>
            <th>Service concerné</th>
            <td>{{ creneau.service.nom }}</td>
        </tr>
        <tr>
            <th>Ordre</th>
            <td>{{ creneau.ordre ?? '—' }}</td>
        </tr>
        <tr>
            <th>Actif</th>
            <td>{{ creneau.actif ? 'Oui' : 'Non' }}</td>
        </tr>
    </table>

    <a href="{{ path('app_creneau_edit', {'id': creneau.id}) }}" class="btn btn-warning">Modifier</a>
    <a href="{{ path('app_creneau_index') }}" class="btn btn-secondary">Retour à la liste</a>

    {{ include('creneau/_delete_form.html.twig') }}

{% endblock %}
