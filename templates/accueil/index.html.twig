{% extends 'base.html.twig' %}

{% block title %}HYBROSTECH{% endblock %}

{% block main %}
    <img class="hero-image" src="{{ asset('images/faux_hero.jpg') }}" alt="Product">

    <h1 class="titre-accueil">Artisans et leurs services</h1>
    <div class="services-center">
        <img src="{{ asset('images/test.png') }}" alt="Product">
        <img src="{{ asset('images/test.png') }}" alt="Product">
        <img src="{{ asset('images/test.png') }}" alt="Product">
        <img src="{{ asset('images/test.png') }}" alt="Product">
    </div><br>

    <div class="catalogue-section">
        <h1 class="titre-accueil-blanc">Catalogue des services</h1>
        <div class="catalogue-cards">
            <div class="card">
                <img src="{{ asset('images/depannage.png') }}">
                <div class="card-body">
                    <h5 class="card-title">Dépannage rapide</h5>
                    <p class="card-text">Intervention immédiate pour fuites, pannes et canalisations bouchées. Service fiable et réactif.</p>
                    <button class="btn btn-warning">Réserver ce service</button>
                </div>
            </div>

            <div class="card">
                <img src="{{ asset('images/installation.png') }}">
                <div class="card-body">
                    <h5 class="card-title">Installation salle de bain</h5>
                    <p class="card-text">Pose de robinetterie, douche, WC, chauffe-eau. Rénovation propre et sur mesure.</p>
                    <button class="btn btn-warning">Réserver ce service</button>
                </div>
            </div>

            <div class="card">
                <img src="{{ asset('images/entretien.png') }}">
                <div class="card-body">
                    <h5 class="card-title">Entretien plomberie</h5>
                    <p class="card-text">Détartrage, nettoyage des canalisations, contrôle du chauffe-eau. Prévention des pannes.</p>
                    <button class="btn btn-warning">Réserver ce service</button>
                </div>
            </div>

            <div class="card">
                <img src="{{ asset('images/mise_norme.png') }}">
                <div class="card-body">
                    <h5 class="card-title">Mise aux normes</h5>
                    <p class="card-text">Modernisation et sécurisation de vos installations selon les normes en vigueur.</p>
                    <button class="btn btn-warning">Réserver ce service</button>
                </div>
            </div>
        </div>

        <button type="button" class="btn_service">Découvrir plus de services</button>
    </div><br>

    <h1 class="titre-accueil">Avantages</h1><br>
    <div class="avantages-section">
        <div class="avantages-images">
            <img src="{{ asset('images/logo_intervention.png') }}" alt="Intervention">
            <img src="{{ asset('images/logo_devis.png') }}" alt="Devis">
            <img src="{{ asset('images/logo_artisan.png') }}" alt="Artisan">
        </div>
    </div><br>

<div class="carte-section">
    <h1 class="titre-accueil-blanc">Zone d'intervention</h1>
    <div id="map" style="width:60%; height:600px; margin:20px auto 0 auto; border-radius:15px; overflow:hidden;"></div>
    <script src="{{ asset('js/map.js') }}"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA85qi7jHSJvC98Ffei_7pKEYZmsWvaZag&callback=initMap" async defer></script>
</div>
    <h1 class="titre-accueil">Avis clients</h1><br>
{% endblock %}
