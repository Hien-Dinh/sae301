{% extends 'base.html.twig' %}

{% block title %}Back Office - Gestion des Réservations{% endblock %}

{% block main %}

    <div class="backoffice-container">
        <h1 class="h1-bo">Bienvenue dans le back-Office</h1>

        <p class="page-description">Gérez vos réservations et créneaux horaires ici.</p>

        <h2 class="section-title">Tableau des Réservations</h2>

        <table class="reservations-table">
            <thead class="reservations-table__header">
            <tr>
                <th>Client</th>
                <th>Service</th>
                <th>Créneau</th>
                <th>Durée</th>
                <th>Statut</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody class="reservations-table__body">
            {% for reservation in reservations %}
                <tr>
                    <td>{{ reservation.prenom }} {{ reservation.nom }}</td>
                    <td>{{ reservation.typeService }}</td>
                    <td>{{ reservation.creneauHoraire }}</td>
                    <td>{{ reservation.dateSouhaitee|date('d/m/Y') }}</td>
                    <td>{{ reservation.urgence ? 'Urgent' : 'Normal' }}</td>
                    <td>
                        <div class="action-buttons">
                            <a href="{{ path('app_backoffice_show', {'id': reservation.id}) }}" class="btn btn--voir">Voir</a>
                            <a href="{{ path('app_backoffice_edit', {'id': reservation.id}) }}" class="btn btn--modifier">Modifier</a>
                            <form action="{{ path('app_backoffice_delete', {'id': reservation.id}) }}" method="POST" class="delete-form">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete_commande_' ~ reservation.id) }}">
                                <button type="submit" class="btn btn--annuler" onclick="return confirm('Supprimer cette commande? Cette action est définitive.');">Annuler</button>
                            </form>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="empty-message">Aucune réservation pour le moment.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="management-section">
            <h2 class="section-title">Gestion</h2>
            <ul class="management-list">
                <li class="management-list__item">
                    <a href="{{ path('app_service_index') }}" class="management-list__link">Gérer les services</a>
                </li>
                <li class="management-list__item">
                    <a href="{{ path('app_creneau_index') }}" class="management-list__link">Gérer les créneaux</a>
                </li>
            </ul>
        </div>
    </div>

{% endblock %}
