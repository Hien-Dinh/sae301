{% extends 'base.html.twig' %}

{% block title %}Back Office - Gestion des Réservations{% endblock %}

{% block main %}

    <div class="example-wrapper">
        <h1>Bienvenue dans le Back-Office!</h1>

        <p>Gérez vos réservations et créneaux horaires ici.</p>

        <h2>Tableau des Réservations</h2>

        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Client</th>
                <th>Service</th>
                <th>Créneau</th>
                <th>Durée</th>
                <th>Statut</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for reservation in reservations %}
                <tr>
                    <td>{{ reservation.prenom }} {{ reservation.nom }}</td>
                    <td>{{ reservation.typeService }}</td>
                    <td>{{ reservation.creneauHoraire }}</td>
                    <td>{{ reservation.dateSouhaitee|date('d/m/Y') }}</td>
                    <td>{{ reservation.urgence ? 'Urgent' : 'Normal' }}</td>
                    <td>
                        <a href="{{ path('app_backoffice_show', {'id': reservation.id}) }}" class="btn btn-info">Voir</a>
                        <a href="{{ path('app_backoffice_edit', {'id': reservation.id}) }}" class="btn btn-warning">Modifier</a>
                        <form action="{{ path('app_backoffice_delete', {'id': reservation.id}) }}" method="POST" style="display:inline;"><input type="hidden" name="_token" value="{{ csrf_token('delete_commande_' ~ reservation.id) }}"><button class="btn btn-danger" onclick="return confirm('Supprimer cette commande? Cette action est définitive.');">Annuler</button></form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Aucune réservation pour le moment.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <h2>Gestion</h2>
        <ul>
            <li><a href="{{ path('app_service_index') }}">Gérer les services</a></li>
            <li><a href="{{ path('app_creneau_index') }}">Gérer les créneaux</a></li>
        </ul>

        {% endblock %}
