{% extends 'base.html.twig' %}

{% block title %}Actualités - Artisanat à Domicile{% endblock %}

{% block body %}
    <h1>Les dernières actualités</h1>

    <div class="articles">
        {% for article in articles %}
            <div class="article-card">
                <img src="{{ article.image }}" alt="Image pour {{ article.title }}" class="article-image">
                <h2>{{ article.title }}</h2>
                <p><em>Publié le {{ article.date|date('d/m/Y') }} | Catégorie: {{ article.category }}</em></p>
                <p>{{ article.excerpt }}</p>
                <p><em>Lire plus</em></p>
            </div>
        {% endfor %}
    </div>

{% endblock %}
