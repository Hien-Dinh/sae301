{% extends 'base.html.twig' %}

{% block title %}Détails du Service{% endblock %}

{% block body %}
    <h1>Détails du service</h1>

    <table class="table">
        <tr><th>Nom</th><td>{{ service.nom }}</td></tr>
        <tr><th>Slug</th><td>{{ service.slug }}</td></tr>
        <tr><th>Durée (min)</th><td>{{ service.duree ?? '—' }}</td></tr>
        <tr><th>Actif</th><td>{{ service.actif ? 'Oui' : 'Non' }}</td></tr>
    </table>

    <a href="{{ path('app_service_edit', {'id': service.id}) }}" class="btn btn-warning">Modifier</a>
    <a href="{{ path('app_service_index') }}" class="btn btn-secondary">Retour à la liste</a>

    {{ include('service/_delete_form.html.twig') }}
{% endblock %}
